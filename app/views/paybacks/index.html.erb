<p id="notice"><%= notice %></p>

<h1>Listing Paybacks</h1>

<table>
  <thead>
    <tr>
      <th>Payment</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paybacks.each do |payback| %>
      <tr>
        <td><%= payback.payment_id %></td>
        <td><%= payback.date %></td>
        <td><%= link_to 'Show', payback %></td>
        <td><%= link_to 'Edit', edit_payback_path(payback) %></td>
        <td><%= link_to 'Destroy', payback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payback', new_payback_path %>
