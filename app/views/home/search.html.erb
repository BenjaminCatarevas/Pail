<% unless @fundraisers.empty? %>
	<ul>
		<% for f in @fundraisers do %>
			<li><%= link_to f.name, fundraiser_path(f) %></li>
		<% end %>
	</ul>
<% else %>
<ul>
  No search results
</ul>
<% end %>

