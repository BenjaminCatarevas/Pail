<h2>Search result for term <em>'<%= @query %>'</em> resulted in <%= pluralize(@total_hits, 'hit') %></h2>
<p class="supertiny">&nbsp;</p>

<p><em>Users matching term '<%= @query %>'</em></p>
<% unless @users.empty? %>
	<ul>
		<% for user in @users do %>
			<li><%= link_to user.name, user_path(user) %></li>
		<% end %>
	</ul>
<% else %>
<ul>
  No search results
</ul>
<% end %>

