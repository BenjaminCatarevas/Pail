<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<style type="text/css">
	.body {
		font-family: 'Segoe UI';
		margin: 0;
		min-width: 100%;
		min-height: 100%;
	}

	.user-image {
		width: 48px;
	}

	#parent {
		display: flex;
	}

	.w3-sidebar a {
		margin: 20px 0;
		padding-left: 30px;

		width: 100%;
		text-decoration: none !important;
	}
	.w3-sidebar a:hover {
		/*background-color: white;*/
	}


</style>

<div class="pure-g">
	<div class="pure-u-1-3">
		<div class="w3-sidebar w3-light-grey w3-bar-block" style="width:25%">
			<% if !logged_in? %>
			<h3 class="w3-bar-item"></h3>
			<% end %>
			<% if logged_in? %>
			<h3 class="w3-bar-item">Options</h3>
			<%= link_to "Pay User", new_payment_path %><br>
			<%= link_to "View Payments", payments_path %><br>
			<%= link_to "View Fundraisers", fundraisers_path %><br>
			<%= link_to "View Your Organization", organizations_path %><br>
			<% end %>
		</div>
	</div>

	<div class="pure-u-1-3">
		<div class="small-basic-container">
			<% for p in @payments %>
			<div class="pure-g">
				<div class="pure-u-2-24">
					<%= image_tag getUserImagePath(p.payer.nickname), class: 'user-image' %>
				</div>
			</div>
			<% end %>
		</div>
	</div>

	<div class="pure-u-1-3">
		<div class="small-basic-container">
			<% for f in @fundraisers %>
			<div class="pure-g">
				<div class="pure-u-1-24">
					<%= image_tag getFundraiserImagePath(f.name), class: 'user-image' %>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>