<style type="text/css">
	.body {
		font-family: 'Segoe UI';
		margin: 0;
		min-width: 100%;
		min-height: 100%;
	}

</style>

<% if logged_in? %>
<%= link_to "Click here to pay someone", new_payment_path %><br>
<%= link_to "Click here to view your payments", payments_path %><br>
<%= link_to "Click here to view your fundraisers", fundraisers_path %>
<% end %>

<div class="small-basic-container">
	<% for p in @payments %>
	<div class="pure-g">
		<div class="pure-u-1-5">
			<%= image_tag getUserImagePath(p.payer.nickname, class: "user-image") %>
		</div>
	</div>
	<% end %>
</div>

<div class="small-basic-container">
	<% for f in @fundraisers %>
	<div class="pure-g">
		<div class="pure-u-1-5">
			<%= image_tag getFundraiserImagePath(f.fundraiser.name, class="fundraiser-image") %>
		</div>
	</div>
	<% end %>
</div>