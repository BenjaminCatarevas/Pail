<style type="text/css">
	.body {
		font-family: 'Segoe UI';
		margin: 0;
		min-width: 100%;
		min-height: 100%;
	}

</style>

<% if logged_in? %>
<%= link_to "Click here to pay someone", new_payment_path %><br>
<%= link_to "Click here to view your payments", payments_path %><br>
<%= link_to "Click here to view your fundraisers", fundraisers_path %><br>
<%= link_to "Click here to view your Organizations", organizations_path %><br>
<% end %>

<div class="medium-basic-container">
	<%= @payments %>
	<% for payment in @payments %>
		<div class="pure-g">
			<div class="pure-u-1-5">
				<%= image_tag getUserImagePath(payment.payer.nickname) %>
			</div>
		</div>
	<% end %>
</div>

