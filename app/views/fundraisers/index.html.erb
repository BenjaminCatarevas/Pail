<p id="notice"><%= notice %></p>

<h1>Listing Fundraisers</h1>

<table class="pure-table pure-table-horizontal">
  <thead>
    <tr>
      <th>Owner</th>
      <th>Name</th>
      <th>Category</th>
      <th>Goal</th>
      <th>Raised</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fundraisers.each do |fundraiser| %>
      <tr>
        <td><%= fundraiser.owner_id %></td>
        <td><%= fundraiser.name %></td>
        <td><%= fundraiser.category %></td>
        <td><%= number_to_currency(fundraiser.goal) %></td>
        <td><%= number_to_currency(fundraiser.raised) %></td>
        <td><%= fundraiser.start_date %></td>
        <td><%= fundraiser.end_date %></td>
        <td><%= fundraiser.description %></td>
        <td><%= link_to 'Show', fundraiser %></td>
        <td><%= link_to 'Edit', edit_fundraiser_path(fundraiser) %></td>
        <td><%= link_to 'Destroy', fundraiser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

