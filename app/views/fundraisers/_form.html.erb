<%= simple_form_for(@fundraiser) do |f| %>
	<% if @fundraiser.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@fundraiser.errors.count, "error") %> prohibited this organization from being saved:</h2>

			<ul>
			<% @fundraiser.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<div class="pure-form">
		<div class="field">
			<%= f.label :name %><br>
			<%= f.text_field :name %>
		</div>
		<div class="field">
			<%= f.label :description %><br>
			<%= f.text_area :description %>
		</div>
		<div class="field">
			<%= f.label :category %><br>
			<%= f.select :category, Fundraiser::TYPES %>
		</div>
		<div class="field">
			<%= f.label :goal %><br>
			<%= f.number_field :goal %>
		</div>
		<div class="field">
			<%= f.label :end_date %><br>
			<%= f.date_select :end_date %>
		</div>
		<%= f.submit( "Fundraise", class: 'pure-button') %>
	</div>
<% end %>

