<p id="notice"><%= notice %></p>

<h1>Listing Organizations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.description %></td>
        <td><%= link_to 'Show', organization %></td>
        <% if OrganizationUser.for_organization(organization.id).map{|ou| ou.user.id}.include?(current_user.id) %>
          <td>Already joined!</td>
        <% else %>
          <td><%= link_to 'Join Organization', new_organization_user_path(:org_id => organization.id) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Organization', new_organization_path %>
