<style>
#coin-animation {
	width: 100%;
	text-align: center;
}
#coin-jar {
	position: relative;
	height: 200px;
	width: 187px;

	margin: 75px auto;
}
#coins-pail {
	left: 0;
	position: absolute;
}
#coins-coins {
	display: none;
	left: 0;
	position: absolute;
}
#fund-info {

}
#balance {
	
}
</style>
<div id="coin-animation">
	<div id="coin-jar">
		<%= image_tag 'animations/coins-coins.png', height: '200', id: 'coins-coins' %>
		<%= image_tag 'animations/coins-pail.png', height: '200', id: 'coins-pail' %>

		<script>
		$(document).ready(function() {
			$('#coins-coins').show();
			$('#coins-coins').animateCss('bounceInDown');
		});
		</script>
	</div>
	<div id="fund-info">
		YOUR FUNDS
		<div id="balance">
			<%= number_to_currency(current_user.funds) %>
		</div>
	</div>
</div>








<p id="notice"><%= notice %></p>
current fund: <%= number_to_currency(current_user.funds) %>
<h3>Your Payments</h3>

<h5>Payments Sent</h5>
<% unless @payer_payments.empty? %>
	<!-- Table when user = payer -->
	<table>
		<thead>
			<tr>
				<th>Payee</th>
				<th>Amount</th>
				<th>Date</th>
			</tr>
		</thead>

		<tbody>
			<% for p in @payer_payments %>
				<tr>
					<td><%= User.find(p.payee_id).proper_name %></td>
					<td><%= number_to_currency(p.amount) %></td>
					<td><%= p.date.strftime("%m/%d/%y") %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	No payments exist in our system yet.
<% end %>
<br>

<h5>Payments Received</h5>
<% unless @payee_payments.empty? %>
	<!-- Table when user = payee -->
	<table>
		<thead>
			<tr>
				<th>Payer</th>
				<th>Amount</th>
				<th>Date</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% for p in @payee_payments %>
				<tr>
					<td><%= User.find(p.payer_id).proper_name %></td>
					<td><%= number_to_currency(p.amount) %></td>
					<td><%= p.date.strftime("%m/%d/%y") %></td>
					<% unless p.is_paid_back %>
						<td><%= link_to "Pay Back", create_payback_path(p) %>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	No payments exist in our system yet.
<% end %>
<br>

<%= link_to 'New Payment', new_payment_path(:source => "personal") %>
