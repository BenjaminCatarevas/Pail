<p id="notice"><%= notice %></p>

<h1>Listing Payments</h1>

<table>
  <thead>
    <tr>
      <th>Payee</th>
      <th>Payer</th>
      <th>Fundraiser</th>
      <th>Amount</th>
      <th>Message</th>
      <th>Payment receipt</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.payee_id %></td>
        <td><%= payment.payer_id %></td>
        <td><%= payment.fundraiser_id %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.message %></td>
        <td><%= payment.payment_receipt %></td>
        <td><%= payment.date %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

