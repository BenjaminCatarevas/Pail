<p id="notice"><%= notice %></p>

<h3>Your Payments</h3>

<h5>Payments Sent</h5>
<% unless @payer_payments.empty? %>
  <!-- Table when user = payer -->
  <table>
    <thead>
      <tr>
        <th>Payee</th>
        <th>Amount</th>
        <th>Date</th>
      </tr>
    </thead>

    <tbody>
      <% for p in @payer_payments %>
        <tr>
          <td><%= User.find(p.payee_id).proper_name %></td>
          <td><%= number_to_currency(p.amount) %></td>
          <td><%= p.date.strftime("%m/%d/%y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  No payments exist in our system yet.
<% end %>
<br>

<h5>Payments Received</h5>
<% unless @payee_payments.empty? %>
  <!-- Table when user = payee -->
  <table>
    <thead>
      <tr>
        <th>Payer</th>
        <th>Amount</th>
        <th>Date</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% for p in @payee_payments %>
        <tr>
          <td><%= User.find(p.payer_id).proper_name %></td>
          <td><%= number_to_currency(p.amount) %></td>
          <td><%= p.date.strftime("%m/%d/%y") %></td>
          <td>
            <%= form_tag(new_payback_path, method: "get") do %>
              <%= hidden_field_tag 'payment_id', p.id %>
              <%= hidden_field_tag 'date', Date.current %>
              <%= submit_tag "Pay Back" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  No payments exist in our system yet.
<% end %>
<br>

<%= link_to 'New Payment', new_payment_path %>
